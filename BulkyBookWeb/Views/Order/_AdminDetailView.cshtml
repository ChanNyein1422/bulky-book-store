@model List<Data.ViewModel.BookOrderDetailViewModel>

<!-- Modal -->

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle"> Total Books : @Model.Count()</h5>
        <button type="button" class="close" onclick="hidemodal()" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        @if (Model.Count() > 0)
        {
            foreach (var data in Model)
            {
                <p class="h4 fw-bold">@data.book.Title</p>
                <p>Quantity: @data.orderDetail.Quantity</p>
                <p>Price: @data.orderDetail.Price</p>
                <hr />
            }
        }
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" onclick="hidemodal()">Done</button>
    </div>
</div>