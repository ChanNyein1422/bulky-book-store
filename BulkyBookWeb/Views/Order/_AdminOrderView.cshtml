@model List<Data.ViewModel.UserOrderViewModel>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Order Code</th>
                <th scope="col">Name</th>
                <th scope="col">Total Books</th>
                <th scope="col">Price</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>

       
        @foreach (var item in Model)
        {
            <tr id="@item.order.Id">
                <th scope="row">@item.order.OrderCode</th>
                <td>@item.user.Name</td>
                <td>@item.order.TotalBooks</td>
                <td>@item.order.TotalAmount</td>
                    <td>  <a class="btn btn-light border rounded border-dark ms-auto" onclick="load_detail_form('@item.order.Id')">Check Details</a></td>
            </tr>
         
        }
        </tbody>
        </table>

    }
    else
    {
        <p class="h3 mt-5">No orders yet.</p>
    }

