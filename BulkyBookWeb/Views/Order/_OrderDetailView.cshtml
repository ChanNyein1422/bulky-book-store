@model List<Data.ViewModel.BookOrderDetailViewModel>

<p class="fw-bold h5 my-1">Total Books : @Model.Count()</p>
@if (Model.Count() > 0)
{
    <table class="table mb-5">
        @foreach (var data in Model)
        {
            <tr>
                <th scope="row" ></th>
                <td>@data.book.Title</td>
                <td>By @data.book.Author</td>
                <td>Category: @data.book.Category</td>
                <td>Price: @data.orderDetail.Price</td>
            </tr>
        }

    </table>
}else{
    <p class="h4 fw-bold"> No Books Here.</p>
}