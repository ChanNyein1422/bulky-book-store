@model List<Data.Models.tbCategory>

<p class="h4 fw-bold">Filter by category</p>
<hr />
<div class="d-flex flex-row flex-wrap bd-highlight mb-3">
    <button class="btn btn-light border rounded border-dark bd-highlight mx-2 my-2" id="GetAll" onclick="filter_category('')">None</button>
    @if (Model.Count() > 0)
    {
        foreach(var item in Model)
        {
            <button class="btn btn-light border rounded border-dark bd-highlight mx-2 my-2" id="@item.Id" onclick="filter_category('@item.Category')">@item.Category</button>
        }
    }
    <button class="btn btn-light border rounded border-dark bd-highlight mx-2 my-2" id="GetAll" onclick="filter_category('N/A')">N/A</button>
</div>
<hr />
