@model List<Data.Models.tbCategory>

<p class="fw-bold mt-3">Filter by category</p>
<hr />
<div class="d-flex flex-row flex-wrap bd-highlight">
    <button class="btn btn-light border rounded border-dark bd-highlight mx-2 my-1" id="cat_filter_0" onclick="filter_category('',0)">None</button>
    @if (Model.Count() > 0)
    {
        foreach(var item in Model)
        {
            <button class="btn btn-light border rounded border-dark bd-highlight mx-2 my-1" id="cat_filter_@item.Id" onclick="filter_category('@item.Category', '@item.Id')">@item.Category</button>
        }
        <button class="btn btn-light border rounded border-dark bd-highlight mx-2 my-1" id="cat_filter_na" onclick="filter_category('N/A','na')">N/A</button>

    }</div>
<hr />
